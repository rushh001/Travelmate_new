<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:gms="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_back1"
    android:orientation="vertical"
    android:id="@+id/User"
    tools:context=".UserFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:backgroundTint="#2F7694"
        android:text="Sign out"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:cornerRadius="15dp"
        card_view:strokeColor="#2F7694"
        card_view:strokeWidth="3dp" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_gravity="center"
       android:background="@color/transparent"
        android:fontFamily="@font/roboto_bold"
        android:text="Mohd Zaid Husain"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/full_name"
        android:text="\@zaid"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_2"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/white"
        card_view:cardCornerRadius="40dp"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlayout"
>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_toLeftOf="@id/Line"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:hint="Age"
            android:inputType="number"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_colour"
            android:textSize="15dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age"
            android:fontFamily="@font/lexend_deca"
            android:gravity="center_horizontal"
            android:padding="1dp"
            android:text="yr."
            android:textColor="@color/black"
            android:textSize="12dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/Line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="sans-serif-light"
        android:text="|"
        android:textColor="@color/blue"
        android:textSize="60dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@id/Line"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="30dp"
    >

    <TextView
        android:id="@+id/gender_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:padding="7dp"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <Switch
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:theme="@style/SwitchCompatTheme"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</LinearLayout>
</RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/firstyr"
    android:layout_marginHorizontal="5dp"
    android:backgroundTint="#2F7694"
    android:text="1st yr"
    android:textColor="@color/white"
    android:textSize="15dp">

</com.google.android.material.button.MaterialButton>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/secondyr"
        android:backgroundTint="#2F7694"
        android:layout_marginHorizontal="5dp"
        android:text="2nd yr"
        android:textSize="15dp"
        android:textColor="@color/white">

    </com.google.android.material.button.MaterialButton>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/thirdyr"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="#2F7694"
        android:text="3rd yr"
        android:textSize="15dp"
        android:textColor="@color/white">

    </com.google.android.material.button.MaterialButton>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/fourthyr"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="#2F7694"
        android:text="4th yr"
        android:textSize="15dp"
        android:textColor="@color/white">

    </com.google.android.material.button.MaterialButton>

</LinearLayout>





    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        card_view:boxBackgroundColor="@color/white"
        card_view:endIconTint="@color/black"
        card_view:boxStrokeColor="@color/black"
        card_view:hintTextColor="@color/black"
        android:textColorHint="@color/hint_colour"
          card_view:boxCornerRadiusBottomEnd="20dp"
        card_view:boxCornerRadiusBottomStart="20dp"
        card_view:boxCornerRadiusTopEnd="20dp"
        card_view:boxCornerRadiusTopStart="20dp"


        >

        <AutoCompleteTextView
            android:id="@+id/placeOfOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:inputType="none"
            android:hint="State/UT"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
      android:layout_marginHorizontal="90dp"
        android:layout_marginTop="30dp"
       android:gravity="center"
        android:backgroundTint="#2F7694"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="20dp"
        card_view:strokeColor="#2F7694"
        card_view:strokeWidth="3dp"
        app:cornerRadius="15dp"
        />

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_2"
        android:backgroundTint="#E8C09D"
        card_view:cardCornerRadius="40dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About:"
            android:fontFamily="@font/roboto_bold"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="15dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/About"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
      />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_2"
            android:backgroundTint="#E8C09D"
            card_view:cardCornerRadius="40dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to use:"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="19dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="15dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="10dp"
                    android:padding="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</HorizontalScrollView>


</LinearLayout>
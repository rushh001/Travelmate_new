<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/white"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/ad_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
           android:padding="10dp"
            android:src="@drawable/ic_launcher_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:orientation="horizontal">

            <TextView
                android:id="@+id/ad_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohd Zaid Husain"
                android:maxLines="2"
                android:maxWidth="160dp"
                android:inputType="none"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/ad_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/black"
               android:layout_gravity="center"
                android:text="2nd yr"/>

        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ad_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cehnnai Airport "
                    android:textColor="@color/black"
                    android:maxLines="1"
              android:scrollHorizontally="true"
                    android:maxWidth="150dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:textSize="13dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/baseline_arrow_right_alt_24"
                   />
                <TextView
                    android:id="@+id/ad_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:maxWidth="150dp"
                    android:textColor="@color/black"
                    android:text="Chennai Central railway Station"
                    android:maxLines="1"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:fontFamily="sans-serif"

                    android:textSize="13dp"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ad_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:inputType="text"
                    android:textSize="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"

                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="|"
                   />
                <TextView
                    android:id="@+id/ad_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:maxWidth="150dp"
                    android:textColor="@color/black"
                    android:text="Gender"
                    android:fontFamily="sans-serif-light"
                    android:textSize="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="|"/>
                <TextView
                    android:id="@+id/ad_placeOfOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:text="Origin"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:fontFamily="sans-serif-light"
                    android:textSize="10dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:drawableStart="@drawable/baseline_access_time_24"
                    />

                <TextView
                    android:id="@+id/ad_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:00"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:textSize="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:drawableStart="@drawable/baseline_calendar_month_24"
                    />

                <TextView
                    android:id="@+id/ad_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd/mm/yyyy"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    android:textSize="10dp"/>




                <com.google.android.material.button.MaterialButton
                    android:id="@+id/connect_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:text="Connect"
                    android:textSize="13dp"
                    android:maxLines="1"
                    android:paddingHorizontal="5dp"
                    android:layout_marginHorizontal="10dp"

                    />





            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
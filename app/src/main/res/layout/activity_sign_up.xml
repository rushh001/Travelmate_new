<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:gms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_back"
    tools:context=".SignUp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Travelmate"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="50dp" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="50dp"
        android:paddingLeft="15dp"
        android:src="@drawable/travelmate1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Let's find mates
                          to travel with"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SignUpbtn"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:backgroundTint="#2F7694"
        android:drawableLeft="@drawable/google__1_"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:cornerRadius="23dp"
        android:shadowColor="@color/light_grey"
       >


    </com.google.android.material.button.MaterialButton>

</LinearLayout>







<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:gms="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Search"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SearchFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="20dp"
    android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/grey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center_horizontal">
<EditText
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/from"
    android:hint="  From"
   android:textColorHint="@color/hint_colour"
    android:textSize="23dp"
     android:layout_marginTop="20dp"
    android:textColor="@color/black"
    android:padding="7dp"
    android:inputType="textAutoComplete"
android:background="@drawable/rounded"
android:backgroundTint="@color/dim_grey"
    android:layout_marginHorizontal="20dp"
    android:drawableLeft="@drawable/outline_location_on_24"
    android:drawablePadding="7dp"
    />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/to"
                android:hint="  Destination"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:padding="7dp"
                android:inputType="textAutoComplete"
                android:textColorHint="@color/hint_colour"
               android:background="@drawable/rounded"
                android:backgroundTint="@color/dim_grey"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:drawableLeft="@drawable/outline_location_on_24"
               android:drawablePadding="7dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Search"
                android:backgroundTint="@color/dim_grey"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="5dp"
                android:textSize="23dp"
                card_view:strokeColor="@color/black"
                card_view:strokeWidth="1dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>






</LinearLayout>
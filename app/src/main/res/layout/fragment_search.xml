<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:gms="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Search"
    android:orientation="vertical"
    android:background="@drawable/gradient_back"
    tools:context=".SearchFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="20dp"
    android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:outlineAmbientShadowColor="@color/light_grey"
        android:outlineSpotShadowColor="@color/black"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/cardback"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
android:background="@color/white"
            android:layout_gravity="center_horizontal">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                card_view:boxBackgroundColor="@color/light_blue"
                card_view:endIconTint="@color/blue"
                card_view:boxStrokeColor="@color/blue"
                card_view:hintTextColor="@color/blue"
                android:textColorHint="@color/hint_colour"
                card_view:boxCornerRadiusBottomEnd="10dp"
                card_view:boxCornerRadiusBottomStart="10dp"
                card_view:boxCornerRadiusTopEnd="10dp"
                card_view:boxCornerRadiusTopStart="10dp"



                >

                <AutoCompleteTextView
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:inputType="none"
                    android:hint="From"
                    android:drawableLeft="@drawable/outline_location_on_24"
                android:drawablePadding="7dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-medium"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                card_view:boxBackgroundColor="@color/light_blue"
                card_view:endIconTint="@color/blue"
                card_view:boxStrokeColor="@color/blue"
                card_view:hintTextColor="@color/blue"
                android:textColorHint="@color/hint_colour"

                card_view:boxCornerRadiusBottomEnd="10dp"
                card_view:boxCornerRadiusBottomStart="10dp"
                card_view:boxCornerRadiusTopEnd="10dp"
                card_view:boxCornerRadiusTopStart="10dp"



                >

                <AutoCompleteTextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="none"
                    android:hint="Destination"
                    android:drawableLeft="@drawable/outline_location_on_24"
                    android:drawablePadding="7dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-medium"
                    />

            </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="20dp">

   <TextView
       android:id="@+id/timeslot"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:hint="Time"
       android:textColor="@color/black"
       android:gravity="center"
       android:textColorHint="@color/hint_colour"
       android:textSize="20dp"
       android:layout_marginTop="10dp"
       android:drawableLeft="@drawable/baseline_access_time_24"
       android:drawablePadding="7dp"
       android:clickable="true"
       android:layout_weight="1"
       android:padding="10dp"
       android:background="@drawable/rounded"
       android:layout_marginRight="5dp"
       />
    <TextView
        android:id="@+id/dateslot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:textColorHint="@color/hint_colour"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:drawablePadding="7dp"
        android:clickable="true"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@drawable/rounded"
        android:layout_marginLeft="5dp"

        />

</LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Search"
                android:backgroundTint="#2F7694"
                android:textColor="#FFFF"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="5dp"
                android:textSize="23dp"
            android:shadowColor="@color/black"
                app:cornerRadius="15dp"
               />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>